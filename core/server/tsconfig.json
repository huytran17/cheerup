{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": ["es2015"],
      "allowJs": true,
      "outDir": "./dist",
      "removeComments": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "declaration": true,
      "moduleResolution": "node",
      "rootDir": "."
    },
    "exclude": ["node_modules", "./node_modules", "./node_modules/*", "./node_modules/@types/node/index.d.ts", "./dist"],
    "include": ["src"]
  }