{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "rootDir": "."
  },
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts",
    "dist",
    "./dist",
    "./dist/*",
    "__tests__",
    "./__tests__",
    "./__tests__/*",
    "src/**/*.spec.ts"
  ],
  "include": ["src", "src/**/*.html"]
}
