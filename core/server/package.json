    "@types/response-time": "^2.3.8",
    "@types/validatorjs": "^3.15.0",
    "copyfiles": "^2.4.1",
    "gulp": "^4.0.2",
    "gulp-htmlmin": "^5.0.1",
    "gulp-minify-inline": "^1.1.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "gulp-uglify": "^3.0.2",
    "jest": "^29.3.1",
