{
  "name": "server",
  "version": "1.0.0",
  "description": "server",
  "main": "index.ts",
  "scripts": {
    "add-build": "git add dist",
    "build": "rimraf dist && tsc && yarn copy-files",
    "copy-files": "copyfiles src/**/*.html dist/",
    "dev": "nodemon src/app.ts",
    "dev:cls": "nodemon src/index.ts",
    "dc:up": "docker-compose up -d",
    "dc:down": "docker-compose down",
    "gulp:build": "rimraf dist && gulp --max-old-space-size=8192",
    "serve": "cross-env NODE_ENV=production node ./dist/src/app.js --max-old-space-size=4096",
    "serve:cls": "cross-env NODE_ENV=production node ./dist/src/index.js --max-old-space-size=4096",
    "serve-ts": "cross-env NODE_ENV=production ts-node --log-error -- ./src/app.ts",
    "serve-ts:cls": "cross-env NODE_ENV=production ts-node --log-error -- ./src/index.ts",
    "test": "jest --passWithNoTests --detectOpenHandles",
    "test:ci": "node --max-old-space-size=8192 --expose-gc ./node_modules/.bin/jest --config jest.config.js --silent --cache --noStackTrace --forceExit --ci --logHeapUsage --detectOpenHandles --runInBand --bail",
    "ts.check": "tsc --project tsconfig.json"
  },
  "pre-commit": [
    "ts.check",
    "build",
    "add-build"
  ],
  "repository": {
    "type": "git",
    "url": "Blog"
  },
  "author": "HuyTran",
  "license": "MIT",
  "dependencies": {
    "aws-sdk": "^2.1459.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.20.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-rate-limit": "^6.6.0",
    "express-winston": "^4.2.0",
    "handlebars": "^4.7.7",
    "helmet": "^5.1.0",
    "html-pdf-node": "^1.0.8",
    "html-to-text": "^8.2.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.3",
    "mongodb-memory-server-core": "^8.10.2",
    "mongoose": "^6.4.0",
    "mongoose-lean-virtuals": "^0.9.1",
    "multer": "^1.4.4",
    "multer-s3": "^2.10.0",
    "nodemailer": "^6.9.13",
    "otplib": "^12.0.1",
    "passport": "^0.6.0",
    "passport-google-oauth2": "^0.2.0",
    "passport-jwt": "^4.0.0",
    "qrcode": "^1.5.3",
    "randomstring": "^1.2.3",
    "reading-time": "^1.5.0",
    "redis": "^4.3.1",
    "request-ip": "^3.3.0",
    "response-time": "^2.3.2",
    "socket.io": "^4.7.5",
    "timeago.js": "^4.0.2",
    "ts-node": "^10.8.1",
    "validatorjs": "^3.22.1",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/html-to-text": "^8.1.1",
    "@types/jest": "^29.2.4",
    "@types/lodash": "^4.14.182",
    "@types/mongoose-lean-virtuals": "^0.5.3",
    "@types/multer": "^1.4.7",
    "@types/multer-s3": "^2.7.11",
    "@types/node": "^18.0.0",
    "@types/nodemailer": "^6.4.15",
    "@types/passport": "^1.0.9",
    "@types/passport-facebook": "^2.1.11",
    "@types/passport-google-oauth2": "^0.1.5",
    "@types/passport-jwt": "^3.0.6",
